ul.breadcrumb
    li
       a(href='/') Home
       span.divider /
    li
       != linkTo('pledges', pathTo.pledges())
       span.divider /
    li.active
       a(href='#') New pledge

.page-header
  h1 New pledge

- var form = formFor(pledge, {action: pathTo.pledges(), method: 'POST', id: "pledge_form", class: 'form-horizontal'})

!= form.begin()
include _form
.form-actions
  != form.submit('<i class="icon-ok icon-white"></i>  Create pledge', {class: 'btn btn-primary'})
  span= ' or '
  != linkTo('Cancel', pathTo.pledges(), {class: 'btn'})
!= form.end()
