ul.breadcrumb
      li
        a(href='/') Home
        span.divider /
      li
        != linkTo('categories', pathTo.categories())
        span.divider /
      li.active
        a(href='#') Edit category

.page-header
  h1 Edit category

- var form = formFor(category, {action: pathTo.category(category), method: 'PUT', id: "category_form", class: 'form-horizontal'});

!= form.begin()
include _form
.form-actions
  != form.submit('<i class="icon-ok icon-white"></i> Update category', {class: 'btn btn-primary'})
  span= ' or '
  != linkTo('Cancel', pathTo.category(category), {class: 'btn'})
!= form.end()
